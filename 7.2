</head>
<body>
    <div id="content">
        <h1>Shadman 12423187</h1>
       
        <script>
            const myData = document.getElementsByClassName("flag1");
            document.getElementById("flag2").innerHTM: = myData[0].innerHTML;
        </script>
        <h4>Conditional Statements</h4>
        <p>Results:</p>
        
        <script>
            let myMarks = prompt("Enter your Marks");
        
            myMarks = parseInt(myMarks);
        
            if (isNaN(myMarks)) {
                document.write("<p>Please enter a valid number.</p>");
            } else if (myMarks > 60) {
                document.write('<span style="color: green; font-weight: bold;">PASS</span>');
            } else {
                document.write('<span style="color: red; font-weight: bold;">FAIL</span>');
            }
        </script>
        
    </div>
   
</body>
